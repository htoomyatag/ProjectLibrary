<h3 id="notice"><%= notice %></h3>

<h1>My Documents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is private</th>
      <th>Is owner</th>
      <th>File Size</th>
      <th>Uploaded at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.is_private %></td>
        <td><%= document.is_owner %></td>
        <td>
          <% document.images.each do |image| %>
            <%= image.byte_size %> byte
          <% end %>
        </td>
        <td><%= document.created_at %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

