<h3 id="notice"><%= notice %></h3>

<h1>Other Documents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is private</th>
      <th>File Size</th>
      <th>Uploaded at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.is_private %></td>
        <td>
          <% document.images.each do |image| %>
            <%= image.byte_size %> byte
          <% end %>
        </td>
        <td><%= document.created_at %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Copy', copy_document_path(copy_document_id: document), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

